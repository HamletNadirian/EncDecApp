<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="10dp"
        tools:context=".SelectCipherFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="12dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:layout_margin="10dp"

                android:orientation="vertical">

                <Button
                    android:id="@+id/encAesCipherBt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/black"
                    android:text="AES" />

                <Button
                    android:id="@+id/encASCICodeBt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/encAesCipherBt"
                    android:backgroundTint="@color/black"
                    android:text="ASCII code" />

                <Button
                    android:id="@+id/encBase64Bt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/encASCICodeBt"
                    android:text="Base 64" />

                <Button
                    android:id="@+id/encAffineCodeBt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/encBase64Bt"
                    android:text="Affine code" />


                <Button
                    android:id="@+id/encMorseCodeBt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/encAffineCodeBt"
                    android:text="Morse code"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:layout_margin="10dp"

                android:orientation="vertical">

                <Button
                    android:id="@+id/cipher"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/black"
                    android:text="AES" />

                <Button
                    android:id="@+id/encCaesarCipherBt"
                    android:layout_width="match_parent"
                    android:textSize="12sp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/cipher"
                    android:backgroundTint="@color/black"
                    android:text="Caesar Cipher" />

            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>